{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "server/*": [ "./source/*" ]
    },
    "outDir": "dist",
    "allowJs": true,
  },
  "include": ["vite.config.ts", "source/*"],
  "exclude": [ "./src" ],
}
